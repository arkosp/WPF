<Window x:Class="WPFLearning.DependencyPropertyUsage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFLearning"
        Title="DependencyPropertyUsage" Height="300" Width="300" Background="AliceBlue">
    <StackPanel>
        <local:DependencyProperyExample Text="Text"/>
        <!--dzięki dependency property po ustawieniu tła dla okna user control też ma takie samo tło-->
        <Button Content="AttachedPropertyButton" local:AttachedProperty.AttachedPropertyExample="True"/>
        <!--dzięki attached property mogę do dowolnej kontrolki dodać propercję-->
    </StackPanel>
</Window>
