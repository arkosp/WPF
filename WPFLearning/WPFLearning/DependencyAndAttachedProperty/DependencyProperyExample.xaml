<UserControl x:Class="WPFLearning.DependencyProperyExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="175" d:DesignWidth="385">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Height="74" Width="383">
        <TextBlock Text="Label" Width="80" HorizontalAlignment="Left"/>
        <TextBox  HorizontalAlignment="Stretch" Text="{Binding Text}" Width="216" />
        <Button Content="Button" Width="80" HorizontalAlignment="Right"/>
    </StackPanel>
</UserControl>
